{
    "name": "keboola/ex-storage",
    "license": "MIT",
    "description": "Storage API Extractor",
    "type": "project",
    "require": {
        "php": "^7.4",
        "keboola/php-component": "^8.3",
        "keboola/storage-api-client": "^12.6"
    },
    "require-dev": {
        "ext-json": "*",
        "keboola/coding-standard": ">=13.0",
        "keboola/datadir-tests": "^5.2",
        "keboola/php-temp": "^2.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpstan/phpstan": "^0.12.99",
        "phpunit/phpunit": "^9.5",
        "symfony/process": "^5.3"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\StorageExtractor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\StorageExtractor\\Tests\\": "tests/phpunit/"
        }
    },
    "scripts": {
        "tests-phpunit": "phpunit",
        "tests": [
            "@tests-phpunit"
        ],

        "phpstan": "phpstan analyse --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
